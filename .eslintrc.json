{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-else-return": "off",
        "quotes": [
            "error",
            "single"
        ],
        "comma-dangle": "off",
        "indent": "off",
        "@typescript-eslint/indent": "off",
        "no-warning-comments": "off",
        "object-curly-spacing": "off",
        "capitalized-comments": "off"
    }
}
